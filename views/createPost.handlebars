<div class="columns is-half mx-6 mt-3 has-text-dark has-text-centered is-3 ml-6">
<div class="column">
    <h2>Enter a post 
    <span class="has-text-primary-dark"> {{title}}</span> </h2>

    <form class="form new-post-form px-6">
    <div class="mt-2">
        <label for="post-title">Title:</label>
        <textarea class="input is-small mt-1" id="post-title" name="post-title"></textarea>
    </div>
    <div class="mt-2">
        <label for="post-content">Content:</label>
        <textarea class="input is-small mt-1" id="post-content" name="post-content"></textarea>
    </div>
    <div class="mt-2">
        <button type="submit" class="button is-success is-light mt-3">Create</button>
    </div> 
    </form>
</div>
<script src="/js/createPost.js"></script>